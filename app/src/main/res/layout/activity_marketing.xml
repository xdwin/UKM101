<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdwin.ukm101.marketing.MarketingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/marketing_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@string/empty_string">

        <TextView
            android:id="@+id/marketing_activity_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marketing 101"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/marketing_activity_cardview"
        android:layout_below="@id/marketing_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/marketing_activity_statistics_icon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/marketing_activity_statistics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Statistik Marketing"
                android:layout_toEndOf="@id/marketing_activity_statistics_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/marketing_activity_statistics_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_toEndOf="@id/marketing_activity_statistics_icon"
                android:layout_below="@id/marketing_activity_statistics_title"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:text="Lihat trend terbaru pada dunia marketing melalui statistik marketing"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/marketing_activity_suggested_endorser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marketing_activity_cardview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="Suggested Endorser"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <View
        android:id="@+id/marketing_activity_divider"
        android:layout_below="@id/marketing_activity_suggested_endorser"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <ListView
        android:id="@+id/marketing_activity_listview"
        android:layout_below="@id/marketing_activity_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</RelativeLayout>
